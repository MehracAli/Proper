    <main>
            @RenderBody()
    </main>
    <footer>
        <div class="container">
            <div class="row all-footer-info">
                <div class="col-lg-9 col-6">
                    <div class="footerLogo">
                        <img src="~/assets/images/PageLogo2.png" alt="">
                    </div>
                </div>
                <div class="col-lg-3 col-6">
                    <div class="applications">
                        <div class="app" style="width: 160px; height: 46px;">
                            <a href="">
                                <img style="width: 100%;" src="~/assets/images/playStore.png" alt="">
